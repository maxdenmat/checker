// manifest.json
{
  "name": "Select Checkboxes Extension",
  "version": "1.0",
  "manifest_version": 2,
  "description": "An extension that allows you to select or deselect all checkboxes on a webpage.",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
  	"activeTab"
  ],
  "host_permissions":
  	"https://analyze.modolabs.net/*"
}
