{
  "name": "Modo Analyze Selector",
  "version": "1",
  "manifest_version": 2,
  "description": "An extension that allows you to select or deselect all checkboxes on a particular webpage.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
  	"tabs",
  	"activeTab"
  ],
  "host_permissions": [
  	"https://analyze.modolabs.net/*"
  ]
}
